build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  exposed-modules:     Data.Validate
                     , Language.Python.Syntax
                     , Language.Python.Internal.Lexer
                     , Language.Python.Internal.Optics
                     , Language.Python.Internal.Parse
                     , Language.Python.Internal.Render
                     , Language.Python.Internal.Syntax
                     , Language.Python.Internal.Token
                     , Language.Python.Internal.Syntax.BinOp
                     , Language.Python.Internal.Syntax.Comment
                     , Language.Python.Internal.Syntax.CommaSep
                     , Language.Python.Internal.Syntax.Expr
                     , Language.Python.Internal.Syntax.Ident
                     , Language.Python.Internal.Syntax.Module
                     , Language.Python.Internal.Syntax.ModuleNames
                     , Language.Python.Internal.Syntax.Numbers
                     , Language.Python.Internal.Syntax.Statement
                     , Language.Python.Internal.Syntax.Strings
                     , Language.Python.Internal.Syntax.UnOp
                     , Language.Python.Internal.Syntax.Whitespace
                     , Language.Python.Validate.Scope
                     , Language.Python.Validate.Scope.Error
                     , Language.Python.Validate.Syntax
                     , Language.Python.Validate.Syntax.Error
                     , Language.Python.Validate.Indentation
                     , Language.Python.Validate.Indentation.Error
  build-depends:       base >=4.9 && <4.11
                     , digit >=0.6
                     , dlist >=0.8 && <0.9
                     , lens
                     , type-level-sets >=0.8.6.0
                     , parsers
                     , trifecta
                     , fingertree >=0.1 && <0.2
                     , mtl
                     , bytestring-trie >=0.2
                     , containers >=0.5 && <0.6
                     , deriving-compat >=0.4 && <0.5
                     , semigroupoids >=5.2.2 && <5.3
                     , text >=1.2 && <1.3
                     , these >=0.7.4 && <0.7.5
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -O
                       -Wincomplete-patterns
                       -Wincomplete-record-updates
                       -Wunused-imports
                       -Werror

executable example
  main-is:             Main.hs
  other-modules:       Indentation
                     , FixMutableDefaultArguments
                     , OptimizeTailRecursion
                     , Programs
  hs-source-dirs:      example
  build-depends:       base >=4.9 && <4.11, lens, hpython, text
  default-language:    Haskell2010
  ghc-options:         -O
                       -Wincomplete-patterns
                       -Wincomplete-record-updates
                       -Wunused-imports
                       -Werror

executable benchmarks
  main-is:             Main.hs
  hs-source-dirs:      benchmarks
  build-depends:       base >=4.9 && <4.11, hpython, trifecta, criterion, deepseq
  default-language:    Haskell2010
  ghc-options:         -O
                       -Wincomplete-patterns
                       -Wincomplete-record-updates
                       -Wunused-imports
                       -Werror

executable roundtrip
  main-is:             Roundtrip.hs
  hs-source-dirs:      example
  build-depends:       base >=4.9 && <4.11, lens, hpython, filepath, text, trifecta
  default-language:    Haskell2010
  ghc-options:         -O2
                       -Wincomplete-patterns
                       -Wincomplete-record-updates
                       -Wunused-imports
                       -Werror
                       -threaded

test-suite hpython-tests
  main-is:             Main.hs
  type:                exitcode-stdio-1.0
  other-modules:       Generators.General
                     , Generators.Common
                     , Generators.Correct
                     , Generators.Sized
                     , Helpers
                     , LexerParser
                     , Scope
                     , Roundtrip
  hs-source-dirs:      test
  build-depends:       base >=4.9 && <4.11
                     , directory
                     , digit >=0.6
                     , filepath
                     , hpython
                     , hedgehog
                     , lens
                     , mtl
                     , process
                     , semigroupoids >=5.2.2 && <5.3
                     , text >=1.2 && <1.3
                     , transformers
                     , trifecta
                     , these >=0.7.4 && <0.7.5
  default-language:    Haskell2010
  ghc-options:         -O
                       -Wincomplete-patterns
                       -Wincomplete-record-updates
                       -Wunused-imports
                       -Werror
